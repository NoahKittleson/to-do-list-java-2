<form action="/categories/$category.getId()/edit" method="post">
  <label for="name">New Category name</label>
  <input id="name" name="name" type="text">
  <button type="submit" class="btn btn-success">Edit Category</button>
</form>

<form action="/categories/$category.getId()/delete" method="post">
  <button  type="submit" id="deleteButton">Delete this Category</button>
</form>
